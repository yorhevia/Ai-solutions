<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cambiar Contraseña - AI Finance Solutions</title>
    <link rel="stylesheet" href="/stylesheets/generico.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>
<body>

    <div class="container">
        <h1>Cambiar Contraseña</h1>

        <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
            <div class="error-message show">
                <ul>
                    <% error.forEach(function(msg) { %>
                        <li><%= msg %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>

        <% if (typeof error_msg !== 'undefined' && error_msg) { %>
            <div class="error-message show">
                <%= error_msg %>
            </div>
        <% } %>

        <% if (typeof success_msg !== 'undefined' && success_msg) { %>
            <div class="success-message show">
                <%= success_msg %>
            </div>
        <% } %>

        <form action="/cambiar-password" method="POST" class="edit-card">
            <h3>Actualizar Contraseña</h3>
            <div class="form-group">
                <label for="currentPassword">Contraseña Actual:</label>
                <input type="password" id="currentPassword" name="currentPassword" required>
            </div>
            <div class="form-group">
                <label for="newPassword">Nueva Contraseña:</label>
                <input type="password" id="newPassword" name="newPassword" required>
            </div>
            <div class="form-group">
                <label for="confirmNewPassword">Confirmar Nueva Contraseña:</label>
                <input type="password" id="confirmNewPassword" name="confirmNewPassword" required>
            </div>
            <div class="button-group">
                <button type="submit" class="save-button">Cambiar Contraseña</button>
                <a href="/perfilasesor" class="cancel-button">Cancelar</a>
            </div>
        </form>
    </div>

</body>
</html>